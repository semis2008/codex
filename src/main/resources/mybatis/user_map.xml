<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.codex.dao.UserMapper">
    <resultMap id="User" type="User">
        <result column="user_name" property="userName" jdbcType="VARCHAR"/>
        <result column="pass_word" property="passWord" jdbcType="VARCHAR"/>
        <result column="nick_name" property="nickName" jdbcType="VARCHAR"/>
        <result column="email" property="email" jdbcType="VARCHAR"/>
        <result column="role" property="role" jdbcType="INTEGER"/>
        <result column="create_user" property="createUser" jdbcType="VARCHAR"/>
        <result column="create_time" property="createTime" jdbcType="VARCHAR"/>
    </resultMap>

    <insert id="insert" parameterType="User">
        insert into
        security_user(user_name,nick_name,pass_word,email,role,create_user,create_time)
        value(#{userName},#{nickName},#{passWord},#{email},#{role},#{createUser},#{createTime})
        <selectKey resultType="Integer" keyProperty="id">
            SELECT
            LAST_INSERT_ID()
        </selectKey>
    </insert>

    <select id="queryUserByName" resultMap="User">
		select
		user_name,pass_word,nick_name,email,role,create_user,create_time from
		security_user where user_name = #{0}
	</select>
    <delete id="deleteUser">
		delete from security_user where user_name = #{0}
	</delete>

    <delete id="deleteUserRole">
        delete from board_user_role where user_name = #{0}
    </delete>

    <select id="selectAllUsers" resultMap="User">
		select
		user_name,pass_word,nick_name,role,email,create_user,create_time from
		security_user where 1=1 order by role asc
	</select>

</mapper>
